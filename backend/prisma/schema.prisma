generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model jwtData {
  id        Int      @id @default(autoincrement())
  jwt       String   @unique
  user_hash String   @unique
  expires   DateTime
}

model userData {
  id            Int      @id @default(autoincrement())
  last_modified DateTime @default(now())
  salt          String
  user_hash     String   @unique
  pass_hash     String
  twofa         String
}

model chatData {
  id            Int      @id @default(autoincrement())
  last_modified DateTime @default(now())
  participants  String
  chat_hash     String
}
